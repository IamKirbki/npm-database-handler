{
  "name": "kirbkis-database-handler-monorepo",
  "version": "1.0.0",
  "private": false,
  "description": "Monorepo for @kirbkis-database-handler packages",
  "author": "iamkirbki",
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "packages/core",
    "packages/better-sqlite3",
    "packages/pg"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:clean": "npm run clean --workspaces --if-present",
    "clean": "rm -rf packages/*/dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "version": "node scripts/version-bump.js"
  },
  "dependencies": {
    "@iamkirbki/database-handler-core": "^3.1.4",
    "jiti": "^2.6.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/ui": "^4.0.9",
    "better-sqlite3": "^11.10.0",
    "eslint": "^9.39.1",
    "rollup": "^4.53.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "vitest-tsconfig-paths": "^3.4.1"
  }
}
